<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.openmaker.radiogarden.MainActivity">

    <WebView
        android:id="@+id/radiogarden"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/radioList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/radioList"
        app:layout_constraintTop_toTopOf="@+id/radioList" />

    <LinearLayout
        android:id="@+id/radioList"
        android:layout_width="368dp"
        android:layout_height="468dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="35dp">

        <TextView
            android:id="@+id/radioList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Radios"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radioAsia"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="RadioAsia"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ToggleButton
                android:id="@+id/radio1switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Radio Gilli"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/radio2button"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ToggleButton" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kuwait 1 FM"
                android:gravity="left"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"/>

            <ToggleButton
                android:id="@+id/radio3button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
